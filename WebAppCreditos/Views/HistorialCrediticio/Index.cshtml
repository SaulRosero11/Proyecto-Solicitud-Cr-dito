@using Modelo.Entidades

@model IEnumerable<HistorialCrediticio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista Historial Crediticio</h1>
<p> A continución se presenta la lista del Historial Crediticio del Sistema de Aprovación de Créditos BIESS</p>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Historial Crediticio</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-controller="HistorialCrediticio" asp-action="Create">
                Nuevo Historial Crediticio
            </a>
        </div>
    </div>
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show " role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span ariaaria-hidden="true">
                    &times;
                </span>
            </button>
        </div>
    }
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Solicitante</th>
                    <th>Bienes Deudas</th>
                    <th>Detalle Deudas</th>
                    <th>Central de Riesgos</th>
                    <th>Pagos Pendientes</th>
                    <th>Estado Historial</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (HistorialCrediticio historial in Model)
                {
                <tr>
                    <td>@historial.HistorialCrediticioId</td>
                    <td>@historial.BienesSolicitante.Solicitante.Nombres @historial.BienesSolicitante.Solicitante.Apellidos</td>
                    <td>@historial.DeudasBienes</td>
                    <td>@historial.DeudasDet</td>
                    <td>@historial.CentralRiesgos</td>
                    <td>@historial.PagosPendientes</td>
                    <td>@historial.EstadoHistorial</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="HistorialCrediticio" asp-action="Edit" asp-route-id="@historial.HistorialCrediticioId"> Editar </a>
                        <a class="btn btn-danger" asp-controller="HistorialCrediticio" asp-action="Delete" asp-route-id="@historial.HistorialCrediticioId"> Eliminar </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

