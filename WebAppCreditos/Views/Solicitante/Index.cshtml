@using Modelo.Entidades

@model IEnumerable<Solicitante>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista Solicitantes</h1>
<p> A continución se presenta la lista de los Solicitantes del Sistema de Aprovación de Créditos BIESS</p>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Solicitantes</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block"  asp-controller="Solicitante" asp-action="Create">
                Nuevo Solicitante
            </a>
        </div>
    </div>
    @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show " role="alert">
                    @TempData["mensaje"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span ariaaria-hidden="true">
                            &times;
                        </span>
                    </button>
                </div>
            } 
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Cédula</th>
                    <th>Estado Civil</th>
                    <th>Fecha nacimiento</th>
                    <th>Discapacidad</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Solicitante solic in Model)
                {
                    <tr>
                        <td>@solic.SolicitanteId</td>
                        <td>@solic.Nombres</td>
                        <td>@solic.Apellidos</td>
                        <td>@solic.Cedula</td>
                        <td>@solic.EstadoCivil</td>
                        <td>@solic.FechaNac.ToShortDateString()</td>
                        <td>@solic.Discapacidad</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Solicitante" asp-action="Edit" asp-route-id="@solic.SolicitanteId"> Editar </a>
                            <a class="btn btn-danger" asp-controller="Solicitante" asp-action="Delete" asp-route-id="@solic.SolicitanteId"> Eliminar </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

