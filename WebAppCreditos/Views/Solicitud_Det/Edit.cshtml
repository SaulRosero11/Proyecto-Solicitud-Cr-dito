@using Modelo.Entidades

@model Solicitud_Det

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Actualizar Detalle Solicitud</h1>

<div class="container">
    <div class="row">
        <div class="">
            <h3 class="text-center">Editar el Detalle Solicitud del solicitante : @Model.Solicitud.Afiliado.Solicitante.Nombres @Model.Solicitud.Afiliado.Solicitante.Apellidos</h3>
        </div>
    </div>
    <div class="row">
        <div class="">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="Solicitud_DetId" />
                <div class="form-group">
                    <label class="control-label">Rol de Pagos</label>
                    <select class="form-control" asp-for="solicitudId" asp-items="@ViewBag.selectListSolicitud">
                        <option value="">--Selecciona--</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Declracion Impuestos</label>
                    <select class="form-control" asp-for="amortizacionId" asp-items="@ViewBag.selectListAmortizacion">
                        <option value="">--Selecciona--</option>
                    </select>
                </div>
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Editar" />
                </div>
            </form>
        </div>
    </div>
</div>
