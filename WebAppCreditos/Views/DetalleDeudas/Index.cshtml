@using Modelo.Entidades

@model IEnumerable<DetalleDeudas>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista Detalle Deudas</h1>
<p> A continución se presenta la lista de Detalle Deudas del Sistema de Aprovación de Créditos BIESS</p>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Detalle Deuda</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-controller="DetalleDeudas" asp-action="Create">
                Nuevo Detalle Deuda
            </a>
        </div>
    </div>
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show " role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span ariaaria-hidden="true">
                    &times;
                </span>
            </button>
        </div>
    }
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Targetas de Credito</th>
                    <th>Pago targetas</th>
                    <th>Credito Linea Blanca</th>
                    <th>Pago Credito</th>
                    <th>Total Deudas</th>
                    <th>Solicitante</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DetalleDeudas detalle in Model)
                {
                <tr>
                    <td>@detalle.DetalleDeudasId</td>
                    <td>@detalle.TragetasCredito</td>
                    <td>@detalle.PagoPendienteTargetas</td>
                    <td>@detalle.CreditosLineaBlanca</td>
                    <td>@detalle.PagoPendienteCreditos</td>
                    <td>@detalle.TotalPendienteDeudas</td>
                    <td>@detalle.Solicitante.Nombres @detalle.Solicitante.Apellidos</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="DetalleDeudas" asp-action="Edit" asp-route-id="@detalle.DetalleDeudasId"> Editar </a>
                        <a class="btn btn-danger" asp-controller="DetalleDeudas" asp-action="Delete" asp-route-id="@detalle.DetalleDeudasId"> Eliminar </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

