@using Modelo.Entidades

@model IEnumerable<BienAdquirir>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista Bien Adquirir</h1>
<p> A continución se presenta la lista de los Bienes Adquirir del Sistema de Aprovación de Créditos BIESS</p>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Bien Adquirir</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-controller="BienAdquirir" asp-action="Create">
                Nuevo Bien Adquirir
            </a>
        </div>
    </div>
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show " role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span ariaaria-hidden="true">
                    &times;
                </span>
            </button>
        </div>
    }
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Propietario</th>
                    <th>Tipo Vivienda</th>
                    <th>Avaluo</th>
                    <th>Pago Impuesto Predial</th>
                    <th>Hipoteca</th>
                    <th>Escrituras</th>
                    <th>Estado Bien</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (BienAdquirir bienAdquirir in Model)
                {
                <tr>
                    <td>@bienAdquirir.BienAdquirirId</td>
                    <td>@bienAdquirir.Propietario</td>
                    <td>@bienAdquirir.TipoVivienda</td>
                    <td>$ @bienAdquirir.Avaluo </td>
                    <td>@bienAdquirir.PagoIMP</td>
                    <td>@bienAdquirir.Hipoteca</td>
                    <td>@bienAdquirir.Escrituras</td>
                    <td>@bienAdquirir.EstadoBien</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="BienAdquirir" asp-action="Edit" asp-route-id="@bienAdquirir.BienAdquirirId"> Editar </a>
                        <a class="btn btn-danger" asp-controller="BienAdquirir" asp-action="Delete" asp-route-id="@bienAdquirir.BienAdquirirId"> Eliminar </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

