@using Modelo.Entidades

@model BienAdquirir

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creacion del Bien</h1>

<div class="container">
    <div class="row">
        <div class="">
            <h3 class="text-center">Ingrese los datos del Bien</h3>
        </div>
    </div>
    <div class="row">
        <div class="">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label for="Propietario">Propietario</label>
                    <input type="text" class="form-control" asp-for="Propietario" placeholder="Ingresa el nombre tel propietario">
                </div>
                <div class="form-group">
                    <label for="PagoIMP">Tipo Bien</label>
                    <select class="form-control" asp-for="TipoVivienda">
                        <option>--SELECIONA UNA OPCION--</option>
                        <option value="TERRENO"> TERRENO </option>
                        <option value="VIVIENDA DE INTERÉS PÚBLICO"> VIVIENDA DE INTERÉS PÚBLICO</option>
                        <option value="OTROS BIENES INMUEBLES"> OTROS BIENES INMUEBLES</option>
                        <option value="VIVIENDA TERMINADA"> VIVIENDA TERMINADA</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Avaluo">Avaluo</label>
                    <input step="0.00" min="0" class="form-control" asp-for="Avaluo" placeholder="0.00"> 
                </div>
                <div class="form-group">
                    <label for="PagoIMP">Pago Impuestos</label>
                    <select class="form-control"
                            asp-for="PagoIMP" asp-items="Html.GetEnumSelectList<PagoImp>()">
                        <option value="">--Selecciona un opcion--</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Hipoteca">Hipoteca</label>
                    <select class="form-control"
                            asp-for="Hipoteca" asp-items="Html.GetEnumSelectList<Hipoteca>()">
                        <option value="">--Selecciona un opcion--</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Escritura">Escrituras</label>
                    <select class="form-control"
                            asp-for="Escrituras" asp-items="Html.GetEnumSelectList<Escrituras>()">
                        <option value="">--Selecciona un opcion--</option>
                    </select>
                </div>
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Crear Bien" />
                </div>
            </form>
        </div>
    </div>
</div>

